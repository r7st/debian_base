write_logs = yes
log_file = /var/log/audit/audit.log
log_format = RAW
log_group = root
priority_boost = 4
flush = INCREMENTAL
freq = 20
num_logs = {{ base_auditd_num_logs | default(5) }}
name_format = NONE
max_log_file = {{ base_auditd_max_log_file | default(30) }}
max_log_file_action = {{ base_auditd_max_log_file_action | default("rotate") }}
space_left = 75
space_left_action = SYSLOG
action_mail_acct = root
admin_space_left = 50
admin_space_left_action = SUSPEND
disk_full_action = SUSPEND
disk_error_action = SUSPEND
tcp_listen_queue = 5
tcp_max_per_addr = 1
tcp_client_max_idle = 0
enable_krb5 = no
krb5_principal = auditd
